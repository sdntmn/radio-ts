.radioList
  background: #00aeb0;
  position: absolute;
  top: 116px;
  left: 12px;
  z-index: 100;
  max-width: 300px
  width: 100%;
  border-radius: 4px;
  background: #00aeb0;
  box-shadow: inset 0 -3em 3em rgba(0, 0, 0, 0.2), 0 0 0 1px #00adb08d,
    0.3em 0.3em 1em rgba(0, 0, 0, 0.3);


  &__title
    cursor: pointer;
    margin: 0 auto;
    padding: 8px 0;
    text-align: center;
    width: 100%;
    box-shadow: inset 0 -1em 1em rgba(0, 0, 0, 0.2), 0 0 0 1px #00adb08d,
    0.1em 0.1em 0.1em rgba(0, 0, 0, 0.3);
    border-radius: 4px 4px 0 0;
    color: aquamarine;

  &__items
    margin: 0;
    padding: 0;
    max-height: 0;
    list-style: none;
    overflow-y: auto;
    -webkit-overflow-scrolling:touch;
    max-width: 100%;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    gap: .4vh;
    transition: max-height 0.4s linear;

    &_open
      max-height: 69vh;
