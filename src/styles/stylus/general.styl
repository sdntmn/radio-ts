:root
  --white: #fff;
  --active-color: #00aeb0;


* {
  scrollbar-width: thin;
  scrollbar-color: #00adb08d rgb(163, 158, 146);
}

/* для Chrome/Edge/Safari */
*::-webkit-scrollbar {
  margin-top: 14px;
  height: 12px;
  width: 12px;
}

*::-webkit-scrollbar-track {
  background: #7acecf8d;
}

*::-webkit-scrollbar-thumb {
  background-color: #00adb08d;
  border-radius: 5px;
  border: 1px solid rgb(6, 148, 148);
  padding-top: 14px;
  margin-top: 14px;
}

* {
  box-sizing: border-box;
  margin: 0;
}

html {
  font-family: Arial, Helvetica, sans-serif;
  height: 100%;
  background: var(--active-color);
  transition: background 0.4s ease;
}
