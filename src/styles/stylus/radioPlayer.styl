.radioPlayer
  display: flex;
  justify-content: center
  position: relative;
  overflow: hidden;
  width: 100%;
  min-height: 50%;
  border-radius: 20px;
  padding: 40px 0;

  box-shadow: inset 0 -3em 3em rgba(0, 0, 0, 0.2), 0 0 0 1px #00adb08d,
    0.3em 0.3em 1em rgba(0, 0, 0, 0.3);
  margin: auto;
  color: var(--white);

  &__img
    border-radius: 75px;
    display: block;
    margin: auto;
    max-width: 150px;
    width: 100%;

  &__info
    text-align: center;
    z-index: 1;

  &__title
    margin: 24px auto;
    font-weight: 600;
    max-width: 80%;

  &__button-is-notFavorite
    position: absolute;
    right: 15px;
    bottom: 15px;
    background: transparent url("../../images/Vector.svg") no-repeat;
    background-size: 24px 24px;
    border: none;
    min-height: 24px;
    width: 24px;
    color: $colorLike;
    transition: 0.5s;
    cursor: pointer;

  &__button-is-Favorite
    position: absolute;
    right: 15px;
    bottom: 15px;
    background: transparent url("../../images/favorite.svg") no-repeat;
    background-size: 24px 24px;
    border: none;
    min-height: 24px;
    width: 24px;
    color: $colorLike;
    transition: 0.5s;
    cursor: pointer;
